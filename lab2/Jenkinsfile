/* Requires the Docker Pipeline plugin */
pipeline {
    agent any
    stages {
        stage('build') {
            steps {
		sh 'pwd'
		sh 'sudo apt install -y pip3'
		sh 'pip3 --version'
                sh 'pip install -r ../requirements.txt'
            }
        }
        stage('test') {
            steps {
                sh 'echo test'
            }
        }
    }
}
