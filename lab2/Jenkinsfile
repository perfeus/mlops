/* Requires the Docker Pipeline plugin */
pipeline {
    agent any
    stages {
        stage('Setup Environment') {
            steps {
                sh '''
                pwd
                which python3
                python3 -m venv $JENKINS_HOME/venv
                . $JENKINS_HOME/venv/bin/activate
                pip install -r lab2/requirements.txt
                '''
            }
        }
        stage('Create Dataset') {
            steps {
                sh 'python3 lab2/data_creation.py'
            }
        }
    }
}
