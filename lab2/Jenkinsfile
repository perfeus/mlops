/* Requires the Docker Pipeline plugin */
pipeline {
    agent any
    stages {
        stage('Setup Environment') {
            steps {
                sh '''
                pwd
                which python3
                python3 -m venv /env
                . /env/bin/activate
                pip3 install -r lab2/requirements.txt
                '''
            }
        }
        stage('Create Dataset') {
            steps {
                sh 'python3 lab2/create_dataset.py'
            }
        }
    }
}
